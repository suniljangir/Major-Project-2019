<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/registration_cardview"
    app:cardBackgroundColor="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <LinearLayout
     android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.login_register.Registration_fragment">


    <!--<ImageView
        android:id="@+id/registration_photo"
        android:background="@drawable/register_profile_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#02ff48"
        android:textStyle="bold"
        android:text="SELECT PROFILE PICTURE"
         />-->
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            android:maxLength="10"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/registration_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Enter Number"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <EditText
         android:inputType="textPassword"
         android:drawableLeft="@drawable/ic_lock_black_24dp"
         android:id="@+id/registration_pass"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="Enter Password"
         />
    </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <EditText
             android:inputType="textPassword"
             android:drawableLeft="@drawable/ic_lock_black_24dp"
             android:id="@+id/registration_confirm_pass"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Confirm Password"
             />
        <Button
            android:background="@drawable/login_btnlogin"
            android:id="@+id/registration_btnsubmit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="100dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="submit"/>
    </android.support.design.widget.TextInputLayout>

 </LinearLayout>
</android.support.v7.widget.CardView>